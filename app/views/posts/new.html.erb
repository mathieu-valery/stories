<div class='container form-box flex-column'>
    <%= simple_form_for [ @post ] do |f| %>
        <%= f.input :caption %>
        <%= f.input :video, as: :file %>
        <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
    <%= link_to 'Back', root_path, class: "btn-travel-secondary mt-2" %>
</div>
